<% if @sizing_criteria_category.errors.any?%>
	$(".error_messages").remove();	
	$("#new_sizing_criteria_category").prepend("<%= escape_javascript(error_messages_for(@sizing_criteria_category))%>");
	$.colorbox.resize();
<% else%>	
	$.colorbox.close();
	alert("New Sizing criteria category Created Successfully.");
	window.location.reload();
<% end%>
