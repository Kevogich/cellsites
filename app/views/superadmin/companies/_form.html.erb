<%= form_for company, :url => company.new_record? ? superadmin_companies_path : superadmin_company_path(company) do |f| %>
	<%= f.error_messages %>
	<div class="form-element">
		<%= f.label :name%><br>
		<%= f.text_field :name%>
	</div>
	<% if company.new_record?%>
	<div class="form-element">
		<%= f.label :admin_username%><br>
		<%= f.text_field :admin_username%>
	</div>
	<div class="form-element">
		<%= f.label :admin_password%><br>
		<%= f.text_field :admin_password%>
	</div>
	<% end%>
	<div class="form-element">
		<%= f.label :contact_person%><br>
		<%= f.text_field :contact_person%>
	</div>
	<div class="form-element">
		<%= f.label :phone%><br>
		<%= f.text_field :phone%>
	</div>
	<div class="form-element">
		<%= f.label :email%><br>
		<%= f.text_field :email%>
	</div>
	<div class="form-element">
		<%= f.label :website%><br>
		<%= f.text_field :website%>
	</div>
	<div class="form-element">
		<%= f.label :users_limit, "No of Users"%><br>
		<%= f.text_field :users_limit%>
	</div>
	<div class="form-element-last">
		<%= f.label :clients_limit, "No of Clients"%><br>
		<%= f.text_field :clients_limit%>
	</div>
	<div class="form-buttons">
		<%= f.submit company.new_record? ? 'Create Company User' : 'Update'%>
	</div>  
<% end%>