	<td class='pdf_td'><b>LOCATION:</b>&nbsp;&nbsp;<%= client.address %></td>
</tr>
<tr>
	<td class='pdf_td'><b>PROJECT:</b>&nbsp;&nbsp;<%= current_user.user_project_setting.project.project_num %></td>
</tr>
<tr>
	<td class='pdf_td'><b>CLIENT PROJECT NUMBER:</b>&nbsp;&nbsp;<%= current_user.user_project_setting.project.document_num %></td>
